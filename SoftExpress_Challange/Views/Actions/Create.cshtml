@model StatistikaCreateDto

@{
    ViewData["Title"] = "Create Statistika";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Create Statistika</h1>

    <!-- Card with Smaller Size (50% of container width) -->
    <div class="card shadow-lg border-0 rounded-3 w-50 mx-auto">
        <div class="card-body">
            <!-- Error Message Display -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Create" method="post">

                <!-- Hidden fields for UserId and Username -->
                <input type="hidden" asp-for="UserId" />

                <!-- Single Column Form Fields -->
                <div class="mb-4">
                    <div class="form-group">
                        <label asp-for="Rajoni" class="form-label fs-5">Rajoni</label>
                        <input asp-for="Rajoni" class="form-control form-control-lg shadow-sm" />
                        <span asp-validation-for="Rajoni" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="form-group">
                        <label asp-for="Lloji_I_Pajisjes" class="form-label fs-5">Lloji i Pajisjes</label>
                        <input asp-for="Lloji_I_Pajisjes" class="form-control form-control-lg shadow-sm" />
                        <span asp-validation-for="Lloji_I_Pajisjes" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="form-group">
                        <label asp-for="Aplikacioni" class="form-label fs-5">Aplikacioni</label>
                        <input asp-for="Aplikacioni" class="form-control form-control-lg shadow-sm" />
                        <span asp-validation-for="Aplikacioni" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>

        <!-- Card Footer with Submit Button and Back Link -->
        <div class="card-footer text-center">
            <!-- Submit Button placed in the footer -->
            <button type="submit" class="btn btn-success btn-lg px-5 py-3 shadow-sm rounded-3">Create Statistika</button>

            <!-- Back Link -->
            <div class="mt-3">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg px-4 py-2 rounded-3 shadow-sm">Back to Statistika List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
